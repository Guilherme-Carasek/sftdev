<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginOkActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lista"
            android:gravity="center"
            android:textSize="78sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            />

        <ListView
            android:id="@+id/lista_alunos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Adicionar contato"
            />

        <EditText
            android:id="@+id/adicionar_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Nome"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/adicionar_morada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Morada"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/adicionar_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Email"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/adicionar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Gravar"
            />

    </LinearLayout>




</LinearLayout>